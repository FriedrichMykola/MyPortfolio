<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:minWidth="300dp"
        android:orientation="vertical"
        android:background="@drawable/background_for_dialog_text"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_name"
        app:boxStrokeColor="#a1795a"
        android:outlineSpotShadowColor="#a1795a"
        android:outlineAmbientShadowColor="#a1795a"
        android:textColorHint="#a1795a"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        tools:targetApi="p">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_new_name"
            android:textSize="20sp"
            android:textColor="#4f2523"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_size"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:entries="@array/letter_size"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_apply_text"
            android:layout_marginVertical="10dp"
            android:textColor="#d6e0e6"
            android:background="#a1795a"
            android:backgroundTint="#a1795a"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/museo_cyrl"
            android:text="@string/apply"
            tools:targetApi="o" />

    </LinearLayout>

</LinearLayout>